<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <!-- Màu nền khi được chọn -->
            <stroke android:color="#FF0000" android:width="2dp" /> <!-- Màu viền khi được chọn -->
        </shape>
    </item>

    <!-- Trạng thái chưa được chọn -->
    <item>
        <shape>
            <solid android:color="#BFBFBF" /> <!-- Màu nền khi chưa được chọn -->
            <stroke android:color="#BFBFBF" android:width="2dp" /> <!-- Màu viền khi chưa được chọn -->
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_corner_16"
    android:layout_margin="16dp">
    <TextView
        android:background="@drawable/bg_red_color_top_left_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Trạng thái cửa hàng"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:textSize="20dp"
        />
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="horizontal"
    >
        <TextView
            android:id="@+id/layout"
            android:drawableRight="@drawable/baseline_online_prediction_24"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            />
    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="left"
        android:fontFamily="@font/br"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:text="Mở cửa"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/ChangeStatus"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/ShopeeFoodColor"
            android:fontFamily="@font/br"
            android:gravity="center"
            android:text="Thay đổi trạng thái"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/TimeClosed"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Lịch đóng cửa"
            android:fontFamily="@font/br"
            android:drawableRight="@drawable/ic_more"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/TimeOpen"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:text="Ngày giờ mở cửa hàng ngày"
            android:fontFamily="@font/br"
            android:drawableRight="@drawable/ic_more"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/TimeOpenInVacation"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Ngày mở cửa dịp lễ"
            android:fontFamily="@font/br"
            android:layout_marginBottom="50dp"
            android:drawableRight="@drawable/ic_more"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:layout_margin="5dp"
    android:id="@+id/CardViewDishes"
    android:layout_height="wrap_content">
    <TextView
        android:layout_gravity="center"
        android:id="@+id/AvaiableDish"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:padding="10dp"
        android:text="Hết món"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="15sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:scaleType="centerCrop"
            android:id="@+id/ImageCategory"/>

        <TextView
            android:id="@+id/tiLe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_shape"
            android:padding="10dp"
            android:text="Giảm 10%"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:textColor="@color/black"
            android:layout_width="200dp"
            android:maxLines="1"
            android:layout_below="@id/ImageCategory"
            android:maxWidth="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/tenSp"
            android:text="Tên món ăn"
            android:padding="10dp"
            android:textSize="16sp"/>
        <LinearLayout
            android:id="@+id/linear"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/tenSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá: "
                android:layout_marginStart="10dp"
                android:textSize="14sp"/>
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="100dp"
                android:maxLines="1"
                android:maxLength="10"
                android:id="@+id/giaGoc"
                android:text="Giá gốc"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"/>

            <TextView
                android:textColor="#E91E1E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="100dp"
                android:maxLines="1"
                android:maxLength="10"
                android:id="@+id/giamCon"
                android:text="Giảm còn"
                android:textSize="14sp"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_corner_16"
    android:layout_margin="16dp">
    <TextView
        android:background="@drawable/bg_red_color_top_left_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Chọn trạng thái"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:textSize="20dp"
        />
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="horizontal"
    >
        <TextView
            android:drawableRight="@drawable/baseline_online_prediction_24"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            />
    <TextView
        android:id="@+id/txtOpen"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="left"
        android:fontFamily="@font/br"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:text="Mở cửa"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        >
        <TextView
            android:drawableRight="@drawable/baseline_circle_24"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/txtClosed"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="left"
            android:fontFamily="@font/br"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:text="Đóng cửa"/>
    </LinearLayout>

</LinearLayout>
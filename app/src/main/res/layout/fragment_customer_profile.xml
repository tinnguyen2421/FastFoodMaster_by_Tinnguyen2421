<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:paddingLeft="20dp"
                android:id="@+id/CusName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FA3E03"
                android:gravity="center_vertical"
                android:text="nguyenVanA"
                android:textColor="@color/white"
                android:textSize="17sp" />
            <TextView
                android:paddingLeft="20dp"
                android:id="@+id/CusTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FA3E03"
                android:gravity="center_vertical"
                android:text="100.000 đ"
                android:textColor="@color/white"
                android:textSize="17sp" />
            <TextView
                android:paddingLeft="20dp"
                android:id="@+id/CusRank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FA3E03"
                android:gravity="center_vertical"
                android:text="Thành viên đòng"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TableRow
                android:id="@+id/hr"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp">


                    <RelativeLayout
                        android:id="@+id/Account_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/baseline_manage_accounts_24"
                            android:drawablePadding="10dp"
                            android:maxWidth="300dp"
                            android:text="Thông tin cá nhân"
                            android:textColor="@color/Blacklogo"
                            android:textSize="16dp" />
                        <ImageView
                            style="@style/viewParent"
                            android:layout_marginLeft="220dp"

                            android:layout_centerVertical="true"

                            android:src="@drawable/ic_more" />


                    </RelativeLayout>



            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:cardElevation="5dp">
                <RelativeLayout
                    android:id="@+id/Voucherr"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="12dp">

                    <RelativeLayout
                        android:id="@+id/Voucher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvVoucher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/ic_food_tray"
                            android:drawablePadding="10dp"
                            android:maxWidth="300dp"
                            android:text="Ví voucher"
                            android:textColor="@color/Blacklogo"
                            android:textSize="16dp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/iconVoucher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:drawableLeft="@drawable/ic_more"
                        android:drawablePadding="10dp"
                        android:maxWidth="300dp"
                        android:textColor="@color/Blacklogo"
                        android:textSize="16dp" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp">





            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/OrdersHistoryLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="12dp">

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:id="@+id/OrdersHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/OrdersHistoryTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/baseline_access_time_filled_24"
                            android:drawablePadding="10dp"
                            android:maxWidth="300dp"
                            android:text="Lịch sử đơn hàng"
                            android:textColor="@color/Blacklogo"
                            android:textSize="16dp" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/IconMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:drawableLeft="@drawable/ic_more"
                        android:drawablePadding="10dp"
                        android:maxWidth="300dp"
                        android:textColor="@color/Blacklogo"
                        android:textSize="16dp" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TableRow
                android:id="@+id/hr3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/InviteFriendsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="12dp">

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:id="@+id/InviteFriends"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/InviteFriendsTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/baseline_access_time_filled_24"
                            android:drawablePadding="10dp"
                            android:maxWidth="300dp"
                            android:text="Mời bạn bè"
                    android:textColor="@color/Blacklogo"
                    android:textSize="16dp" />
                </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:drawableLeft="@drawable/ic_more"
                        android:drawablePadding="10dp"
                        android:maxWidth="300dp"
                        android:textColor="@color/Blacklogo"
                        android:textSize="16dp" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/HelpCenterLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="12dp">

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:id="@+id/HelpCenter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/HelpCenterTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/baseline_help_center_24"
                            android:drawablePadding="10dp"
                            android:maxWidth="300dp"
                            android:text="Trung tâm trợ giúp"
                            android:textColor="@color/Blacklogo"
                            android:textSize="16dp" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:drawableLeft="@drawable/ic_more"
                        android:drawablePadding="10dp"
                        android:maxWidth="300dp"
                        android:textColor="@color/Blacklogo"
                        android:textSize="16dp" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp">
                <LinearLayout
                    android:id="@+id/logout_layout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/logoutt"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_margin="10dp"
                        android:text="Đăng xuất"
                        android:textColor="@color/white"
                        android:background="@color/ShopeeFoodColor"
                        android:textSize="16dp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
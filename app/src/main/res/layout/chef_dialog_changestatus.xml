<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_corner_16"
    android:layout_margin="16dp">
    <TextView
        android:background="@drawable/bg_red_color_top_left_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Quán bận"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:textSize="20dp"
        />
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="left"
        android:fontFamily="@font/br"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:text="Quán bận trong khoảng"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tvTime1"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:fontFamily="@font/br"
            android:layout_weight="1"
            android:text="10 phút"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@drawable/custom_selector"
            />
        <TextView
            android:id="@+id/tvTime2"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:fontFamily="@font/br"
            android:layout_weight="1"
            android:gravity="center"
            android:text="30 phút"
            android:background="@drawable/custom_selector"
            android:layout_margin="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_width="26dp"
            android:layout_height="33dp"
            android:id="@+id/tvTime3"
            android:fontFamily="@font/br"
            android:layout_weight="1"
            android:text="40 phút"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@drawable/custom_selector"
            />
        <TextView
            android:id="@+id/tvTime4"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:fontFamily="@font/br"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1 giờ"
            android:background="@drawable/custom_selector"
            android:layout_margin="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/br"
            android:layout_weight="1"
            android:text="Thời gian bắt đầu"
            android:layout_margin="5dp"
            android:gravity="center"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/br"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Thời gian kết thúc"
            android:layout_margin="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/tvTimeStart"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:fontFamily="@font/br"
            android:layout_weight="1"
            android:text="Chọn mốc thời gian"
            android:drawableRight="@drawable/baseline_calendar_month_24"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="@color/Red"
            android:background="#BFBFBF"
            />
        <TextView
            android:id="@+id/tvTimeEnd"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:fontFamily="@font/br"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableRight="@drawable/baseline_calendar_month_24"
            android:text="Chọn mốc thời gian"
            android:textColor="@color/Red"
            android:background="#BFBFBF"
            android:layout_margin="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/br"
            android:layout_weight="1"
            android:text="Vui lòng chọn thời gian bắt đầu sau thời gian hiện tại"
            android:layout_margin="5dp"

            android:textColor="@color/Red"
            android:background="@color/OffWhite"
            /></LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:paddingLeft="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/br"
            android:layout_weight="1"
            android:text="Lý do (Không bắt buộc)"
            android:layout_margin="5dp"
            android:background="@color/OffWhite"
            />
    <Spinner
        android:id="@+id/SpinnerReason"
        android:layout_marginTop="20dp"
        android:paddingLeft="17dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/br"
        android:layout_weight="1"
        android:gravity="center"
        android:entries="@array/reason"
        android:text="Chọn lí do"
        android:layout_margin="5dp"
        android:background="#BFBFBF"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        >

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/OffWhite"
            android:fontFamily="@font/br"
            android:gravity="center"
            android:text="Hủy" />

        <TextView
            android:id="@+id/btnAcept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/OffWhite"
            android:fontFamily="@font/br"
            android:gravity="center"
            android:text="Xong" />
    </LinearLayout>
</LinearLayout>